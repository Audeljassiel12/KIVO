@model KIVO.Models.ViewModels.EntidadCentroMedicoViewModel
@{
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Añadir Información del Centro Médico</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Contenedor principal -->
    <div class="container mt-5">
        <!-- Logo centrado -->
        <div class="text-center mb-4">
            <img src="/KIVO_SVG/LOGO_ESLOGAN_COLOR.svg" alt="Logo" class="img-fluid" style="max-height: 100px;">
        </div>

        <!-- Título centrado -->
        <h2 class="text-center text-primary mb-4">Añadir Información del Centro Médico</h2>

        <!-- Formulario con Bootstrap -->
        <div id="contenedorVista" class="bg-light p-4 rounded shadow-sm">
            <form id="formCentroMedico">
                <div class="form-group">
                    <label for="nombreEntidad">Nombre de la clínica o centro médico</label>
                    <input type="text" id="nombreEntidad" name="NombreEntidad" class="form-control" value="@Model.NombreEntidad" required />
                </div>

                <div class="form-group">
                    <label for="direccion">Dirección</label>
                    <input type="text" id="direccion" name="Direccion" class="form-control" maxlength="200" value="@Model.Direccion" />
                </div>

                <div class="form-group">
                    <label for="departamentoId">Departamento</label>
                    <select id="departamentoId" name="DepartamentoId" class="form-control" required>
                        <option value="">Seleccione un departamento</option>
                        @foreach (var item in Model.Departamentos)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="municipioId">Municipio</label>
                    <select id="municipioId" name="MunicipioId" class="form-control" required>
                        <option value="">Seleccione un municipio</option>
                    </select>
                </div>

                <!-- Botón Siguiente -->
                <div class="text-center">
                    <button type="button" id="btnSiguiente" class="btn btn-primary btn-block">Siguiente</button>
                </div>
            </form>
        </div>
    </div>


    <script>
        $(document).ready(function () {
            // Cargar municipios según el departamento seleccionado
            $('#departamentoId').change(function () {
                var departamentoId = $(this).val();
                $('#municipioId').empty().append('<option value="">Seleccione un municipio</option>');

                if (departamentoId === "") {
                    return;
                }

                $.ajax({
                    url: '/Cuidad/GetCiudadesByDepartamento', // Cambiar a la acción correcta en el controlador
                    type: 'GET',
                    data: { departamentoId: departamentoId },
                    success: function (municipios) {
                        $.each(municipios, function (index, municipio) {
                            $('#municipioId').append('<option value="' + municipio.value + '">' + municipio.text + '</option>');
                        });
                    }
                });
            });

            // Enviar el formulario con los datos del centro médico
            $('#btnSiguiente').on('click', function () {
                $.ajax({
                    url: '/CentroMedico/Guardar', // Cambiar a la acción correcta en el controlador
                    type: 'POST',
                    data: $('#formCentroMedico').serialize(), // Serializar los datos del formulario
                    success: function (data) {
                        $('#contenedorVista').html(data); // Reemplazar el contenido del contenedor con la respuesta del controlador
                    },
                    error: function () {
                        alert('Hubo un problema al enviar los datos.');
                    }
                });
            });
        });
    </script>
</body>
</html>
