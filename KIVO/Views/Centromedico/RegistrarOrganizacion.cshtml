
@model KIVO.Models.ViewModels.EntidadMedicaViewModel

@{
    ViewData["Title"] = "Registro de Clínica o Centro Médico";
}

<h2>@ViewData["Title"]</h2>

<form method="post" class="mt-4" asp-action="Guardar">
    <div class="form-group">
        <label asp-for="NombreEntidad" class="form-label"></label>
        <input asp-for="NombreEntidad" class="form-control" placeholder="Ingrese el nombre" />
        <span asp-validation-for="NombreEntidad" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="EspecialidadId" class="form-label"></label>
        <select asp-for="EspecialidadId" class="form-control" asp-items="Model.Especialidades">
            <option value="">Seleccione una especialidad</option>
        </select>
        <span asp-validation-for="EspecialidadId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
</form>

