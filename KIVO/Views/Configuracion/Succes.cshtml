@{
    Layout = null;
} 
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pago Exitoso</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to right, #00b4db, #0083b0);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            text-align: center;
            background-color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        .icono-exitoso svg {
            color: #4CAF50;
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
        }

        h1 {
            font-size: 24px;
            color: #333;
            margin: 0;
            font-weight: 600;
        }

        p {
            color: #666;
            font-size: 16px;
            margin: 10px 0 20px 0;
        }

        .boton {
            display: inline-block;
            padding: 10px 20px;
            background-color: #0083b0;
            color: white;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            box-shadow: 0 4px 10px rgba(0, 131, 176, 0.3);
            transition: background-color 0.3s;
        }

            .boton:hover {
                background-color: #00b4db;
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="icono-exitoso">
            <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm3.354-8.854a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7 9.793l3.646-3.647a.5.5 0 0 1 .708 0z" />
            </svg>
        </div>
        <h1>¡Pago Exitoso!</h1>
        <p>Gracias por tu compra.</p>
        <a  class="boton"asp-action="Index" asp-controller="Paciente">Regresar a la página principal</a>
    </div>
</body>
</html>
