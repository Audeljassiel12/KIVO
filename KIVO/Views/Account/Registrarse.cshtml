@model KIVO.Models.Dto.InputModel
@{
    ViewData["Title"] = "";
    Layout = null; 

}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>
    <link rel="stylesheet" href="/css/registrarse.css">
</head>

<body>

    <div class="imagen-esquina">
        <img src="/KIVO_SVG/ESQ_INICIAR.svg" alt="Imagen de esquina">
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Account" asp-action="Registrarse" method="post">
                <section class="formulario">
                    <section class="cajas_texto">
                        <div class="cajas">
                            <h3>REGÍSTRATE</h3>

                            <!-- Mensaje de error -->
                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["Error"]
                                </div>
                            }

                            <div class="form-group">
                                <input asp-for="Nombres" class="form-control" placeholder="Nombre Completo" required />
                                <span asp-validation-for="Nombres" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Email" class="form-control" type="email" placeholder="Correo Electrónico" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Contraseña" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirmar contraseña" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="CellPhone" class="form-control" type="tel" placeholder="Número de teléfono" />
                                <span asp-validation-for="CellPhone" class="text-danger"></span>
                            </div>

                            <button id="btnReg" type="submit" class="btn btn-default">REGISTRARSE</button>

                            <div class="opcion">
                                <hr>
                                <div class="text">O</div>
                                <hr>
                            </div>

                            <button id="google" type="submit" class="btn btn-default">
                                <img src="/KIVO_SVG/GOOGLE.svg" alt="Logo de Google"> Iniciar sesión con Google
                            </button>

                            <h4>¿Ya tienes una cuenta?</h4>
                        </div>
                    </section>

                    <section class="imagen">
                        <img src="/KIVO_SVG/ISOLOGO_1_COLOR.svg" alt="Isologo de KIVO">
                    </section>
                </section>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $("form").validate({
                onfocusout: function (element) {
                    $(element).valid(); // Valida el campo al perder el foco
                },
                onkeyup: false, // Desactiva la validación al escribir
                submitHandler: function (form) {
                    form.submit(); // Enviar el formulario si es válido
                }
            });
        });
    </script>

</body>

</html>
